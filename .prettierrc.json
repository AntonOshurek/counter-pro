{
  "tabWidth": 2,
  "trailingComma": "none",
  "singleQuote": true,
  "semi": true,
  "printWidth": 90,
  "htmlWhitespaceSensitivity": "css",
  "endOfLine": "auto",
  "jsxSingleQuote": true,
  "useTabs": true,
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "embeddedLanguageFormatting": "auto",
  "overrides": [
    {
      "files": [
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx"
      ],
      "options": {
        "parser": "typescript"
      }
    }
  ],
  "ignore": [
    "**/node_modules/**"
  ]
}
